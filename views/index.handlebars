<div class="container">

    <div class="row d-flex justify-content-center">
        <div class="col-xs-12">
            <img src="http://pngimg.com/uploads/burger_sandwich/burger_sandwich_PNG4160.png" alt="burger">
        </div>
    </div>
    <div class="row d-flex justify-content-center">
        <h1>Eat-Da-Burger!</h1>
    </div>
    <div class="row d-flex justify-content-center">
        <form class="create-form">
            <div class="form-group">
                <textarea id="burgerinput" name="burger" rows="5" cols="40" placeholder="What burger to eat next?"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Add Burger</button>
            <p>Add your own burger above!</p>
        </form>
    </div>
    <div class="row d-flex justify-content-center">
        <div class="col-sm-5">
            <h3>Burgers to Devour!</h3>
            <ul>
                {{#each burgers}}
                {{#unless devour}}
                {{> burgers/burger-block devour=true}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-sm-5">
            <h3>Burgers You Devoured!</h3>
            <ul>
                {{#each burgers}}
                {{#if devour}}
                <li>
                <p>{{this.id}}. {{this.name}}</p>
                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>